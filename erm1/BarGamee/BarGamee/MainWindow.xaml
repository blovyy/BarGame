<Window x:Class="BarGamee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarGamee"
        mc:Ignorable="d"
    Title="Игра Бар" Height="400" Width="600">
    <Grid>
        <TextBlock Name="MoneyText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="16"/>
        <TextBlock Name="HappinessText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" FontSize="16"/>
        <TextBlock Name="HungerText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" FontSize="16"/>
        <TextBlock Name="BarLevelText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" FontSize="16"/>

        <Button Name="PassTimeButton" Content="Прошло время" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" Click="PassTimeButton_Click"/>
        <Button Name="UpgradeBarButton" Content="Улучшить бар" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0" Click="UpgradeBarButton_Click"/>

        <Button Name="SaveButton" Content="Сохранить игру" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,250,0,0" Click="SaveButton_Click"/>
        <Button Name="LoadButton" Content="Загрузить игру" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,300,0,0" Click="LoadButton_Click"/>
        <Button Name="UpgradeButton" Content="Улучшить бар" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,150,0,0" Click="UpgradeButton_Click"/>
    </Grid>
</Window>
